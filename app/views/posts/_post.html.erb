<p>
  <h1>
  	<%= link_to post.title, post %>
  </h1>
</p>

<p>
	<% if post.kind == 'image' %>
		<%= image_tag post.content, style: "width: 100%" %>
	<% else %>
		<%= simple_format post.content %>
	<% end %>
</p>

<p class="text-muted">
	<small>
		Posted on <%= post.created_at.to_formatted_s(:long) %>
	</small>
</p>